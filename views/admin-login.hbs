<div
  class="display-4 p-1 text-center font-weight-bold text-uppercase text-dark"
  style="font-family: serif;"
>
  {{title}}
</div>

<div class="hint text-center mt-5">
  <h5>For project submission purposes:</h5>
  <p>Username: <code>don_rico</code></p>
  <p>Password: <code>admin@qwerty</code></p>
</div>

<div
  class="rounded border border-dark mx-auto p-2 m-2 form-container"
  style="width:500px"
>
  <form class="container" action="" method="POST">
    <div class="form-floating text-center mb-3 mt-3">
      <input
        type="text"
        class="form-control"
        id="username"
        name="username"
        placeholder="Username"
        required
      />
      <label for="title" id="username">Username</label>
    </div>
    <div class="form-floating text-center mb-3">
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Password"
        required
      />
      <label for="password" id="password">Password</label>
    </div>

    <div class="form-group d-flex justify-content-center text-center">
      <button type="submit" class="btn btn-primary">Log-in</button>
    </div>
  </form>
</div>

<div class="mx-auto p-2 m-2 text-dark" style="width:500px">
  {{#if errors}}
    <ul style="list-style=none;">
      {{#each errors}}
        <li class="text-danger">{{this}}</li>
      {{/each}}
    </ul>
  {{/if}}
</div>